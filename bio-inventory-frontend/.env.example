# API Configuration
REACT_APP_API_BASE_URL=http://localhost:8000/api

# Application Configuration
REACT_APP_APP_NAME=Quartzy
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Bio-Inventory Management System

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# Theme Configuration
REACT_APP_DEFAULT_THEME=light
REACT_APP_DEFAULT_LANGUAGE=en

# External Services (optional)
# REACT_APP_SENTRY_DSN=your-sentry-dsn-here
# REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Development Settings
GENERATE_SOURCEMAP=true
SKIP_PREFLIGHT_CHECK=true

# Build Configuration
# BUILD_PATH=build
# PUBLIC_URL=/

# Performance Settings
REACT_APP_PAGINATION_DEFAULT_SIZE=20
REACT_APP_DEBOUNCE_DELAY=300

# Security Settings
REACT_APP_ENABLE_CONTENT_SECURITY_POLICY=true