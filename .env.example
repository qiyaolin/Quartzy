# Docker Compose Environment Variables
# Copy this file to .env and adjust the values as needed

# Database Configuration
POSTGRES_DB=quartzy_db
POSTGRES_USER=quartzy_user
POSTGRES_PASSWORD=quartzy_password

# Backend Configuration
BACKEND_SECRET_KEY=your-very-secret-key-here-at-least-32-characters-long
BACKEND_DEBUG=True
BACKEND_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,backend

# Frontend Configuration
FRONTEND_API_URL=http://localhost:8000/api

# Nginx Configuration (for production)
NGINX_PORT=80

# Docker Configuration
COMPOSE_PROJECT_NAME=quartzy

# Production Settings (uncomment and adjust for production)
# BACKEND_DEBUG=False
# POSTGRES_PASSWORD=your-very-secure-password
# BACKEND_SECRET_KEY=your-production-secret-key-minimum-50-characters
# NGINX_PORT=443